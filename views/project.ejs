<%- include('partials/header') %>
    
    <link rel="stylesheet" href="/stylesheets/project.css">

    <link rel="stylesheet" href="stylesheets/style.css">
    <div class="project-container">
        <div class="project-slides">
            <img class="project-slide" src="project1-image.jpg" alt="Project 1 Image">
            <img class="project-slide" src="project2-image.jpg" alt="Project 2 Image">
            <!-- Add more project images as needed -->
        </div>

        <div class="project-description">
            <h2>Project 1:DNU Education</h2>
            <p>
                DNU is a platform to connect students, teachers and schools. JavaScript,C#,Html and CSS were used to build up web & mobile applications for this platform. </p>
            <img src="project1-detail-image.jpg" alt="Project 1 Detail Image">
            <p>
                <strong>Role:</strong> Front-End Developer
                <br>
                <strong>Technologies:</strong> HTML, CSS, JavaScript
                <br>
                <strong>Challenges:</strong> Implementing a real-time shopping cart and integrating payment gateways.
            </p>
        </div>
        

        <div class="project-nav">
            <button onclick="previousSlide()">Previous</button>
            <button onclick="nextSlide()">Next</button>
        </div>
    </div>
    <script>
        let currentSlide = 0;
        const slides = document.querySelectorAll(".project-slide");
        const descriptions = [
            {
                title: "Project 1: E-commerce Website",
                text: "To build an education platform that appears as an effective third-party application to connect schools, teachers and students. To build a whole system with the backend, mobile app and web app and to make it work smoothly and coherently for all parties with the very little provided information.",
                imgSrc: "project1-detail-image.jpg",
                role: "Front-End Developer",
                technologies: "HTML, CSS, JavaScript",
                challenges: "Implementing a real-time shopping cart and integrating payment gateways."
            },
            {
                title: "Project 2: Portfolio Website",
                text: "I created my personal portfolio website to showcase my skills and projects. It includes a responsive design, project slides, and detailed descriptions.",
                imgSrc: "project2-detail-image.jpg",
                role: "Full-Stack Developer",
                technologies: "HTML, CSS, JavaScript, Node.js",
                challenges: "Building a dynamic portfolio with a slide show and interactive descriptions."
            }
            
        ];

        function showSlide(index) {
            if (index < 0) {
                currentSlide = slides.length - 1;
            } else if (index >= slides.length) {
                currentSlide = 0;
            }

            slides.forEach((slide) => {
                slide.style.display = "none";
            });

            slides[currentSlide].style.display = "block";

            // Update the description
            document.querySelector(".project-description h2").textContent = descriptions[currentSlide].title;
            document.querySelector(".project-description p").textContent = descriptions[currentSlide].text;
            document.querySelector(".project-description img").src = descriptions[currentSlide].imgSrc;
            document.querySelector(".project-description strong:nth-of-type(1)").textContent = "Role: " + descriptions[currentSlide].role;
            document.querySelector(".project-description strong:nth-of-type(2)").textContent = "Technologies: " + descriptions[currentSlide].technologies;
            document.querySelector(".project-description strong:nth-of-type(3)").textContent = "Challenges: " + descriptions[currentSlide].challenges;
        }

        function nextSlide() {
            currentSlide++;
            showSlide(currentSlide);
        }

        function previousSlide() {
            currentSlide--;
            showSlide(currentSlide);
        }

        showSlide(currentSlide);
    </script>
</section>
